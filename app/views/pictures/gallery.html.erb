<h1>Gallery Page</h1>

<p>"Choose a filter:" </p>
<%= form_tag gallery_path do %>
    <p><%= collection_select(:filter, :category_id, Category.all.order("animal_type ASC"), :id, :animal_type, {:include_blank => false}, {:multiple => true}) %></p>
    <%= submit_tag "Select Filter" %>
<% end %>




<div class=flex-picture_gallery>
    <% @pictures.each do |picture| %>
    
        <%= link_to picture_path(picture) do %>
            <%= render partial: "layouts/picture", locals: {picture: picture, type: "list"} %>
        <% end %>
        
    <% end %>
</div> <%# flex-picture_gallery %>